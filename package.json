{
	"name": "mindes-lsp",
	"description": "A simple language server for MInDes script",
	"author": "AMoment",
	"license": "WTFPL",
	"version": "0.1.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/A-moment096/MInDes-LSP"
	},
	"publisher": "AMoment",
	"categories": [],
	"keywords": [],
	"engines": {
		"vscode": "^1.75.0"
	},
	"activationEvents": [],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "mindes",
				"aliases": [
					"mindes",
					"mindes"
				],
				"extensions": [
					"mindes"
				],
				"configuration": "./syntaxes/language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "mindes",
				"scopeName": "source.mindes",
				"path": "./syntaxes/mindes.tmLanguage.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "basic configuration",
			"properties": {
				"MInDesServer.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"MInDesServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"semanticTokenTypes": [
			{
				"id": "subkey1"
			},
			{
				"id": "subkey2"
			},
			{
				"id": "subkey3"
			},
			{
				"id": "subkey4"
			},
			{
				"id": "subkey5"
			},
			{
				"id": "subkey6"
			},
			{
				"id": "subkey7"
			},
			{
				"id": "subkey8"
			}
		],
		"semanticTokenColors": {
			"subkey1": "#FF0000",
			"subkey2": "#FF9900",
			"subkey3": "#FFFF00",
			"subkey4": "#00FF00",
			"subkey5": "#00FFFF",
			"subkey6": "#0000FF",
			"subkey7": "#9900FF",
			"subkey8": "#FF00FF"
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.6",
		"@types/node": "^18.14.6",
		"@typescript-eslint/eslint-plugin": "^7.1.0",
		"@typescript-eslint/parser": "^7.1.0",
		"eslint": "^8.57.0",
		"mocha": "^10.3.0",
		"typescript": "^5.3.3"
	}
}